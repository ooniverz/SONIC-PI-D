live_loop :bass_clef do
  use_bpm 74
  use_synth :piano
  #1
  sleep 1
  play :E3
  sleep 1.5
  play :E3
  sleep 0.5
  play :E3
  sleep 0.5
  play :E3
  sleep 1
  play :E3
  sleep 0.5
  #2
  play :B2, amp: 0.5
  sleep 1
  play :B2, amp: 0.5
  sleep 0.75
  play :B2, amp: 0.5
  sleep 0.25
  play :B2, amp: 0.5
  sleep 0.5
  play :B2, amp: 0.5
  sleep 1
  play :B2, amp: 0.5
  sleep 0.5
  #3
  play :E3
  play :E2
  sleep 1.5
  play :E3
  sleep 0.5
  play :E3
  sleep 0.5
  play :E3
  sleep 1
  play :E3
  sleep 0.5
  #4
  play :B2, attack: 0.3, amp: 0.5
  sleep 2
  play :B2, amp: 0.5
  sleep 0.5
  play :B2, amp: 0.5
  sleep 1
  play :B2, amp: 0.5
  sleep 0.5
  stop
end

