define :x do
  puts ("x")
  play :Fs4
  play :Ds4
  play :B3
end

define :y do
  puts ("y")
  play :Es4
  play :Cs4
  play :A3
end

define :z do
  puts ("z")
  play :Es4
  play :Cs4
  play :A3
end

define :a do
  puts ("a")
  play :B3
  play :Es4
  play :G4
end

define :b do
  puts ("b")
  play :B3
  play :Es4
  play :Cs4
end

define:c do
  puts ("c")
  play :G4
  play :Es4
  play :Cs4
end

define :endT do
  play :G4, release: 5, attack: 0.3
  play :Es4, release: 5, attack: 0.3
  play :B3, release: 5, attack: 0.3
  sleep 0.1
  play :G4, release: 5, attack: 0.3
  play :Es4, release: 5, attack: 0.3
  play :B3, release: 5, attack: 0.3
  sleep 0.1
  play :G4, release: 5, attack: 0.3
  play :Es4, release: 5, attack: 0.3
  play :B3, release: 5, attack: 0.3
  sleep 0.1
  play :G4, release: 5, attack: 0.3
  play :Es4, release: 5, attack: 0.3
  play :B3, release: 5, attack: 0.3
  sleep 0.1
end
